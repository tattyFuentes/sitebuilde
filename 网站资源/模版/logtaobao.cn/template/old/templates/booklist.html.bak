{% for page in all_page_list %}
<OPTION value="/books/{{ category.cid }}/page/{{ page }}">第{{ page }}页</OPTION>
{% endfor %}
</SELECT></TD>
</TR></TBODY></FORM>
</TABLE>
</DIV>
</DIV></DIV>


</DIV>


